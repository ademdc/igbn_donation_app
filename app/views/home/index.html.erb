<div class="min-h-screen bg-cover bg-center bg-no-repeat relative" style="background-image: url(<%= asset_path('bg-image.png') %>);">
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50/70 to-indigo-100/70 backdrop-blur-sm"></div>
  <div class="relative container mx-auto px-4 py-12">  <div class="container mx-auto px-4 py-12">
    <div class="max-w-2xl mx-auto">
      <!-- Header -->
      <!-- Language Switcher -->
      <div class="flex justify-between items-center mb-8">
        <div class="flex-1">
          <%= image_tag 'igbn-logo.png', alt: 'DÅ¾emat NÃ¼rnberg', class: 'h-24 w-auto h-24' %>
        </div>
        <div class="bg-white rounded-lg shadow-md p-1 flex space-x-1">
          <%= link_to url_for(locale: :bs), class: "px-4 py-2 rounded-md text-sm font-medium transition-all #{I18n.locale == :bs ? 'bg-indigo-600 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
            ðŸ‡§ðŸ‡¦ BS
          <% end %>
          <%= link_to url_for(locale: :de), class: "px-4 py-2 rounded-md text-sm font-medium transition-all #{I18n.locale == :de ? 'bg-indigo-600 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
            ðŸ‡©ðŸ‡ª DE
          <% end %>
        </div>
      </div>
      </div>
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-900 mb-4 text-white ">
          <%= t("donations.index.title").upcase %>
        </h1>
        <i class="text-xl text-white shadow-lg px-6 py-3">
          <%= t("donations.index.subtitle") %>
        </i>
      </div>

      <!-- Donation Form Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
        <div id="donationForm">
          <!-- Preset Amounts -->
          <div class="mb-8">
            <label class="block text-sm font-semibold text-gray-700 mb-4">
              <%= t("donations.index.select_amount") %>
            </label>
            <div class="grid grid-cols-3 gap-4">
              <% @preset_amounts.each do |amount| %>
                <button 
                  type="button"
                  class="preset-amount-btn border-2 border-gray-300 rounded-xl py-6 px-4 text-center hover:border-indigo-500 hover:bg-indigo-50 transition-all cursor-pointer"
                  data-amount="<%= amount %>"
                >
                  <div class="text-3xl font-bold text-gray-900">â‚¬<%= amount %></div>
                </button>
              <% end %>
            </div>
          </div>

          <!-- Custom Amount -->
          <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              <%= t("donations.index.custom_amount") %>
            </label>
            <div class="relative">
              <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-2xl text-gray-500">â‚¬</span>
              <input 
                type="number" 
                id="customAmount" 
                step="0.01"
                min="1"
                placeholder="0.00"
                class="w-full pl-12 pr-4 py-4 text-2xl border-2 border-gray-300 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
              >
            </div>
          </div>

          <!-- Donor Information (Optional) -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <%= t("donations.index.name_optional") %>
              </label>
              <input 
                type="text" 
                id="donorName"
                placeholder="Max Mustermann"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none"
              >
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <%= t("donations.index.email_optional") %>
              </label>
              <input 
                type="email" 
                id="donorEmail"
                placeholder="max@mustermann.com"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none"
              >
            </div>
          </div>

          <!-- Reader Status -->
          <div id="readerStatus" class="mb-4 p-3 bg-gray-100 rounded-lg hidden">
            <div class="flex items-center">
              <div class="animate-pulse h-2 w-2 bg-green-500 rounded-full mr-2"></div>
              <span class="text-sm text-gray-700">Card reader: <span id="readerStatusText">Checking...</span></span>
            </div>
          </div>

          <!-- Donate Button -->
          <button 
            id="donateBtn"
            class="w-full bg-indigo-600 text-white text-xl font-semibold py-5 rounded-xl hover:bg-indigo-700 transition-all shadow-lg hover:shadow-xl disabled:bg-gray-400 disabled:cursor-not-allowed"
          >
            <%= t("donations.index.donate_now") %>
          </button>
        </div>

        <!-- Processing State -->
        <div id="processingState" class="hidden text-center">
          <div class="mb-6">
            <div class="inline-block animate-spin rounded-full h-16 w-16 border-b-2 border-indigo-600"></div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">
            <%= t("donations.index.processing_payment") %>
          </h3>
          <p class="text-gray-600 mb-4">
            <%= t("donations.index.complete_on_reader") %>
          </p>
          <div id="paymentStatus" class="text-sm text-gray-500">
            <%= t("donations.index.waiting_payment") %>
          </div>
        </div>

        <!-- Success State -->
        <div id="successState" class="hidden text-center">
          <div class="mb-6">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full">
              <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">
            Thank You! ðŸŽ‰
          </h3>
          <p class="text-gray-600 mb-4">
            <%= t("donations.index.donation_received") %> <span id="successAmount" class="font-bold"></span>
          </p>
          <button 
            onclick="location.reload()"
            class="inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all"
          >
            <%= t("donations.index.make_another") %>
          </button>
        </div>

        <!-- Error State -->
        <div id="errorState" class="hidden text-center">
          <div class="mb-6">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-red-100 rounded-full">
              <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">
            <%= t("donations.index.payment_failed") %>
          </h3>
          <p id="errorMessage" class="text-gray-600 mb-4"></p>
          <button 
            onclick="location.reload()"
            class="inline-block px-6 py-3 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-all"
          >
            <%= t("donations.index.try_again") %>
          </button>
        </div>
      </div>

      <!-- Recent Donations -->
      <% if @recent_donations.any? %>
        <div class="bg-white rounded-xl shadow-lg p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4"><%= t("donations.index.recent_donations") %></h3>
          <div class="space-y-2">
            <% @recent_donations.each do |donation| %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-700">
                  <%= donation.donor_name.presence || 'Anonymous' %>
                </span>
                <span class="font-semibold text-indigo-600">
                  â‚¬<%= number_with_precision(donation.amount, precision: 2) %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>